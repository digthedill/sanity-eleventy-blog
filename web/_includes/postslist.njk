<ol reversed class="postlist" style="counter-reset: start-from {{ postslist.length + 1 }}">
{% for post in postslist | reverse %}
  {% set currentPost = post.data.post %}
  <div class="eachPost">
    <img src="{% croppedUrlFor currentPost.mainImage, 300, 300 %}" alt="{{ currentPost.mainImage.alt }}">

  <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
    <a href="{{ post.url | url }}" class="postlist-link">{% if currentPost.title %}<h3>{{ currentPost.title }}</h3>{% else %}<code>{{ post.url }}</code>{% endif %}</a>
    <time class="postlist-date" datetime="{{ currentPost.publishedAt }}">{{ currentPost.publishedAt|readableDate }}</time>
    <div class="excerpt">{{currentPost.excerpt | markdownify | safe}}</div>
  </li>
  </div>
{% endfor %}
</ol>
